{
    "manifest_version": 3,
    "name": "Social Pulse",
    "version": "0.1",
    "description": "Displays the percentage of people who have viewed and liked a post.",
    "permissions": [
      "activeTab"
    ],
    "host_permissions": [
      "https://x.com/*"
    ],
    "content_scripts": [
      {
        "matches": ["https://x.com/*"],
        "js": ["content.js"],
        "css": ["style.css"]
      }
    ]
  }